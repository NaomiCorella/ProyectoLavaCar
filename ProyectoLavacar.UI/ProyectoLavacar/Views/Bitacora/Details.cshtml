@model ProyectoLavacar.Abstracciones.Modelos.ModuloBitacora.BitacoraDto

@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Detalles de Inventario</title>
    <link href="~/Content/assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/default.css" rel="stylesheet" />
    <link href="~/Content/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets/css/slick.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/flaticon/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
</head>

<body>
    <div class="luxury-review-container">
        <div class="container">
            <div class="section-title text-center">
                <div class="luxury-icon">
                    <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12 3L2 12H5V20H19V12H22L12 3M12 7.7C14.1 7.7 15.8 9.4 15.8 11.5C15.8 14.5 12 18 12 18C12 18 8.2 14.5 8.2 11.5C8.2 9.4 9.9 7.7 12 7.7M12 10C11.2 10 10.5 10.7 10.5 11.5C10.5 12.3 11.2 13 12 13C12.8 13 13.5 12.3 13.5 11.5C13.5 10.7 12.8 10 12 10Z" />
                    </svg>
                </div>
                <h2 class="luxury-title">Detalles del Evento</h2>
                
                <div class="luxury-divider"></div>
            </div>

            <div class="luxury-card shadow-lg rounded">
                <div class="card-body">
                    <div class="luxury-details-table">
                        <div class="luxury-details-header">
                            <svg viewBox="0 0 24 24" width="24" height="24">
                                <path fill="currentColor" d="M20 2H4C2.9 2 2 2.9 2 4V16C2 17.1 2.9 18 4 18H8V21C8 21.6 8.4 22 9 22H15C15.6 22 16 21.6 16 21V18H20C21.1 18 22 17.1 22 16V4C22 2.9 21.1 2 20 2M20 16H4V4H20V16M13 13H11V7H13V13M13 17H11V15H13V17Z" />
                            </svg>
                           
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.FechaDeEvento)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.FechaDeEvento)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.TablaDeEvento)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.TablaDeEvento)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.TipoDeEvento)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.TipoDeEvento)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.DatosAnteriores)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.DatosAnteriores)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.DatosPosteriores)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.DatosPosteriores)</div>
                        </div>

                      

                   

                        <a href="@Url.Action("Index", "Bitacora")" class="luxury-button luxury-button-secondary ml-3">
                            <span class="button-text">Volver al Listado</span>
                            <span class="button-icon">
                                <svg viewBox="0 0 24 24">
                                    <path fill="currentColor" d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" />
                                </svg>
                            </span>
                            <div class="button-shine"></div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/assets/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/wow.min.js"></script>
</body>
</html>

<style>
    .luxury-review-container {
        padding: 40px 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
    }

    .section-title {
        margin-bottom: 40px;
        position: relative;
    }

    .luxury-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        border-radius: 50%;
        color: white;
        box-shadow: 0 10px 30px rgba(69, 196, 176, 0.3);
    }

        .luxury-icon svg {
            width: 40px;
            height: 40px;
        }

    .luxury-title {
        font-size: 32px;
        font-weight: 600;
        color: #012030;
        margin-bottom: 15px;
    }

    .luxury-subtitle {
        color: #6c757d;
        font-size: 18px;
        max-width: 600px;
        margin: 0 auto 20px;
    }

    .luxury-divider {
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #45C4B0 0%, #9AEBA3 100%);
        margin: 20px auto;
        border-radius: 3px;
    }

    .luxury-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        max-width: 900px;
        margin: 0 auto;
        padding: 30px;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .luxury-details-table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
    }

    .luxury-details-header {
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        color: white;
        padding: 15px 20px;
        font-size: 18px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .luxury-details-header svg {
            width: 20px;
            height: 20px;
        }

    .luxury-details-row {
        display: flex;
        border-bottom: 1px solid #f0f0f0;
    }

        .luxury-details-row:last-child {
            border-bottom: none;
        }

    .luxury-details-label {
        width: 40%;
        padding: 15px 20px;
        font-weight: 600;
        color: #495057;
        background-color: #f9f9f9;
    }

    .luxury-details-value {
        width: 60%;
        padding: 15px 20px;
        color: #6c757d;
    }

    .luxury-price {
        font-weight: 700;
        color: #218838 !important;
        font-size: 18px;
    }

    .luxury-button {
        position: relative;
        width: 100%;
        max-width: 250px;
        padding: 16px;
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        overflow: hidden;
        transition: all 0.4s ease;
        box-shadow: 0 10px 20px rgba(69, 196, 176, 0.2);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin: 10px 5px;
    }

    .luxury-button-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #adb5bd 100%);
        box-shadow: 0 10px 20px rgba(108, 117, 125, 0.2);
    }

    .button-text {
        position: relative;
        z-index: 2;
    }

    .button-icon {
        position: relative;
        z-index: 2;
        display: flex;
        transition: transform 0.3s ease;
    }

        .button-icon svg {
            width: 20px;
            height: 20px;
        }

    .button-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.6s ease;
    }

    .luxury-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(69, 196, 176, 0.3);
    }

        .luxury-button:hover .button-shine {
            left: 100%;
        }

        .luxury-button:hover .button-icon {
            transform: translateX(5px);
        }

    .luxury-button-secondary:hover {
        box-shadow: 0 15px 30px rgba(108, 117, 125, 0.3);
    }

    .ml-3 {
        margin-left: 15px;
    }

    .mt-5 {
        margin-top: 30px;
    }

    .badge {
        padding: 8px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

    /* Animaciones */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .luxury-icon {
        animation: float 4s ease-in-out infinite;
    }

    @@media (max-width: 768px) {
        .luxury-card {
            padding: 20px;
        }

        .luxury-title {
            font-size: 28px;
        }

        .luxury-subtitle {
            font-size: 16px;
        }

        .luxury-details-row {
            flex-direction: column;
        }

        .luxury-details-label,
        .luxury-details-value {
            width: 100%;
        }

        .luxury-button {
            max-width: 100%;
            margin-bottom: 15px;
        }
    }
</style>