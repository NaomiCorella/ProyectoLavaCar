@model ProyectoLavacar.Abstraciones.Modelos.ModuloReservas.ReservaCompleta

@{
    ViewBag.Title = "Detalles de Reserva";
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Detalles de Reserva</title>
    <link href="~/Content/assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/default.css" rel="stylesheet" />
    <link href="~/Content/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets/css/slick.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/flaticon/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
</head>

<body>
    <div class="luxury-review-container">
        <div class="container">
            <div class="section-title text-center">
                <div class="luxury-icon">
                    <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z" />
                    </svg>
                </div>
                <h2 class="luxury-title">Detalles de la Reserva</h2>
                <p class="luxury-subtitle">Información completa de la reserva seleccionada</p>
                <div class="luxury-divider"></div>
            </div>

            <div class="luxury-card shadow-lg rounded">
                <div class="card-body">
                    <div class="luxury-details-table">
                        <div class="luxury-details-header">
                            <svg viewBox="0 0 24 24" width="24" height="24">
                                <path fill="currentColor" d="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,19H5V5H19V19M17,8.4L13.4,12L17,15.6L15.6,17L12,13.4L8.4,17L7,15.6L10.6,12L7,8.4L8.4,7L12,10.6L15.6,7L17,8.4Z" />
                            </svg>
                            <span>Información de la Reserva</span>
                        </div>

                        @*<div class="luxury-details-row">
            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.idReserva)</div>
            <div class="luxury-details-value">@Html.DisplayFor(model => model.idReserva)</div>
        </div>*@

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.nombreCliente)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.nombreCliente)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.nombreEmpleado)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.nombreEmpleado)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.nombreServicio)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.nombreServicio)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.fecha)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.fecha)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.hora)</div>
                            <div class="luxury-details-value">
                                @(DateTime.TryParse(Model.hora, out var parsedTime) ? parsedTime.ToString("HH:mm") : Model.hora)
                            </div>
                        </div>


                        <div class="luxury-details-row">
                            <div class="luxury-details-label">Estado</div>
                            <div class="luxury-details-value">
                                <span class="luxury-status-badge @(Model.estado ? "pendiente" : "completado")">
                                    @(Model.estado ? "Pendiente" : "Completado")
                                </span>
                               
                            </div>
                        </div>

                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("MisReservas", "Reservas")" class="luxury-button luxury-button-secondary">
                            <span class="button-text">Volver a la Gestión</span>
                            <span class="button-icon">
                                <svg viewBox="0 0 24 24">
                                    <path fill="currentColor" d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" />
                                </svg>
                            </span>
                            <div class="button-shine"></div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/assets/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/wow.min.js"></script>
</body>
</html>

<style>

    .luxury-status-badge {
        display: inline-block;
        min-width: 80px; /* o el valor que necesités */
        text-align: center;
        padding: 5px 10px;
        border-radius: 20px;
        font-weight: bold;
        color: white;
        white-space: nowrap;
    }

        .luxury-status-badge.activo {
            background-color: #4CAF50; /* verde */
        }

        .luxury-status-badge.inactivo {
            background-color: #f44336; /* rojo */
        }



    .luxury-review-container {
        padding: 40px 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
    }

    .section-title {
        margin-bottom: 40px;
        position: relative;
    }
    
    .luxury-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        border-radius: 50%;
        color: white;
        box-shadow: 0 10px 30px rgba(69, 196, 176, 0.3);
    }

        .luxury-icon svg {
            width: 40px;
            height: 40px;
        }

    .luxury-title {
        font-size: 32px;
        font-weight: 600;
        color: #012030;
        margin-bottom: 15px;
    }

    .luxury-subtitle {
        color: #6c757d;
        font-size: 18px;
        max-width: 600px;
        margin: 0 auto 20px;
    }

    .luxury-divider {
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #45C4B0 0%, #9AEBA3 100%);
        margin: 20px auto;
        border-radius: 3px;
    }

    .luxury-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        max-width: 800px;
        margin: 0 auto;
        padding: 30px;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .luxury-details-table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
    }

    .luxury-details-header {
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        color: white;
        padding: 15px 20px;
        font-size: 18px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .luxury-details-header svg {
            width: 20px;
            height: 20px;
        }

    .luxury-details-row {
        display: flex;
        border-bottom: 1px solid #f0f0f0;
    }

        .luxury-details-row:last-child {
            border-bottom: none;
        }

    .luxury-details-label {
        width: 40%;
        padding: 15px 20px;
        font-weight: 600;
        color: #495057;
        background-color: #f9f9f9;
    }

    .luxury-details-value {
        width: 60%;
        padding: 15px 20px;
        color: #6c757d;
    }

    .luxury-status-badge {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
    }

        .luxury-status-badge.active {
            background-color: rgba(69, 196, 176, 0.1);
            color: #218838;
        }

        .luxury-status-badge.inactive {
            background-color: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

    .luxury-button {
        position: relative;
        width: 100%;
        max-width: 300px;
        padding: 16px;
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        overflow: hidden;
        transition: all 0.4s ease;
        box-shadow: 0 10px 20px rgba(69, 196, 176, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin: 20px auto 0;
    }

    .luxury-button-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #adb5bd 100%);
        box-shadow: 0 10px 20px rgba(108, 117, 125, 0.2);
    }

    .button-text {
        position: relative;
        z-index: 2;
    }

    .button-icon {
        position: relative;
        z-index: 2;
        display: flex;
        transition: transform 0.3s ease;
    }

        .button-icon svg {
            width: 20px;
            height: 20px;
        }

    .button-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.6s ease;
    }

    .luxury-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(69, 196, 176, 0.3);
    }

        .luxury-button:hover .button-shine {
            left: 100%;
        }

        .luxury-button:hover .button-icon {
            transform: translateX(5px);
        }

    .luxury-button-secondary:hover {
        box-shadow: 0 15px 30px rgba(108, 117, 125, 0.3);
    }

    /* Animaciones */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .luxury-icon {
        animation: float 4s ease-in-out infinite;
    }

    @@media (max-width: 768px) {
        .luxury-card {
            padding: 20px;
        }

        .luxury-title {
            font-size: 28px;
        }

        .luxury-subtitle {
            font-size: 16px;
        }

        .luxury-details-row {
            flex-direction: column;
        }

        .luxury-details-label,
        .luxury-details-value {
            width: 100%;
        }
    }
</style>