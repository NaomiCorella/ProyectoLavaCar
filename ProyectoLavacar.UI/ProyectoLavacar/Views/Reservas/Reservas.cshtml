                                                        <a href="@Url.Action("Edit", new { idReserva = item.idReserva })" class="luxury-btn-action info me-2 mb-2" title="Editar" data-bs-toggle="tooltip">
                                                            <i class="fas fa-edit"></i>
                                                        </a>

                                                        <a href="@Url.Action("DetallesReserva", new { idReserva = item.idReserva })" class="luxury-btn-action info me-2 mb-2" title="Detalles" data-bs-toggle="tooltip">
                                                            <i class="fas fa-info-circle"></i>
                                                        </a>

                                                        @if (item.estado)
                                                        {
                                                            <a href="@Url.Action("CambiarEstado", new { id = item.idReserva })" class="luxury-btn-action warning me-2 mb-2" title="Inactivar" data-bs-toggle="tooltip">
                                                                <i class="fas fa-times-circle"></i>
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a href="@Url.Action("CambiarEstado", new { id = item.idReserva })" class="luxury-btn-action success me-2 mb-2" title="Activar" data-bs-toggle="tooltip">
                                                                <i class="fas fa-check-circle"></i>
                                                            </a>
                                                        }
                                                    </div>
                                                </td>

                                            </tr>
