@model ProyectoLavacar.Abstraciones.Modelos.ModuloReservas.ReservasDto

@{
    ViewBag.Title = "Edit";
}


<h2>Editar </h2>
<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Editar</title>
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/fonts/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <link href="~/Content/assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/default.css" rel="stylesheet" />
    <link href="~/Content/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets/css/slick.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/flaticon/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>ReservasDto</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3">

                <div class="col-md-10">

                    @Html.HiddenFor(model => model.idReserva)
                    @Html.ValidationMessageFor(model => model.idReserva, "", new { @class = "text-danger" })
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">

                <div class="col-md-10">

                    @Html.HiddenFor(model => model.idCliente)
                    @Html.ValidationMessageFor(model => model.idCliente, "", new { @class = "text-danger" })
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.idEmpleado, "Empleado", htmlAttributes: new { @class = "control-label" })

            @if (ViewBag.empleados is string message)
            {
                <p>@message</p>
            }
            else
            {
                @Html.DropDownListFor(model => model.idEmpleado,
                    new SelectList(ViewBag.empleados, "Id", "nombre"),
                    "Seleccione un empleado",
                    new { @class = "form-control" })
            }

            @Html.ValidationMessageFor(model => model.idEmpleado, "", new { @class = "text-danger" })
        </div>

        @Html.LabelFor(model => model.idServicio, "Nombre Servicio", htmlAttributes: new { @class = "control-label" })

        @Html.DropDownListFor(model => model.idServicio,
            new SelectList(ViewBag.Servicios, "idServicio", "nombre"),
            "Seleccione un servicio",
            new { @class = "form-control" })


        @Html.ValidationMessageFor(model => model.idServicio, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.fecha, new { @class = "form-control", type = "date", required = "required" })
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.hora, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.hora, new { @class = "form-control", type = "time", required = "required" })
                @Html.ValidationMessageFor(model => model.hora, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.estado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.estado)
                    @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/assets/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/wow.min.js"></script>
</body>
</html>