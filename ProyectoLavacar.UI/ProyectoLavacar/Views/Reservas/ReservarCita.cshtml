@model ProyectoLavacar.Abstraciones.Modelos.ModuloReservas.ReservasDto



@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Administración de Usuarios</title>
    <link href="~/Content/assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/default.css" rel="stylesheet" />
    <link href="~/Content/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets/css/slick.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/flaticon/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
</head>

<body>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="luxury-review-container">
            <div class="container">
                <div class="section-title text-center">
                    <div class="luxury-icon">
                        <svg viewBox="0 0 24 24">
                            <path fill="currentColor" d="M19,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,19H5V5H19V19M12,7V17L17,12L12,7Z" />
                        </svg>
                    </div>
                    <h2 class="luxury-title">Crear Nueva Reserva</h2>
                    <p class="luxury-subtitle">Por favor completa los detalles de tu reserva.</p>
                    <div class="luxury-divider"></div>
                </div>

                <div class="luxury-card shadow-lg rounded">
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="luxury-form">
                                @Html.ValidationSummary(true, "", new { @class = "luxury-alert" })

                                <div class="form-group luxury-input-group">
                                    @Html.LabelFor(model => model.idServicio, "Nombre Servicio", htmlAttributes: new { @class = "input-label" })

                                    @if (ViewBag.Servicios != null && ViewBag.Servicios.Count > 0)
                                    {
                                        <div class="input-container">
                                            <span class="input-icon">
                                                <svg viewBox="0 0 24 24">
                                                    <path fill="currentColor" d="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" />
                                                </svg>
                                            </span>
                                            @Html.DropDownListFor(model => model.idServicio,
                                                new SelectList(ViewBag.Servicios, "idServicio", "nombre"),
                                                "Seleccione un servicio",
                                                new { @class = "luxury-select" })
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="info-message">⚠️ No hay servicios disponibles.</p>
                                    }
                                    @Html.ValidationMessageFor(model => model.idServicio, "", new { @class = "validation-message" })
                                </div>

                                <div class="form-group luxury-input-group">
                                    @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "input-label" })
                                    <div class="input-container">
                                        <span class="input-icon">
                                            <svg viewBox="0 0 24 24">
                                                <path fill="currentColor" d="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" />
                                            </svg>
                                        </span>
                                        @Html.TextBoxFor(model => model.fecha, new { @class = "luxury-input", type = "date", required = "required" })
                                        <span class="input-border"></span>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "validation-message" })
                                </div>

                                <div class="form-group luxury-input-group">
                                    @Html.LabelFor(model => model.hora, htmlAttributes: new { @class = "input-label" })
                                    <div class="input-container">
                                        <span class="input-icon">
                                            <svg viewBox="0 0 24 24">
                                                <path fill="currentColor" d="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" />
                                            </svg>
                                        </span>
                                        @Html.TextBoxFor(model => model.hora, new { @class = "luxury-input", type = "time", required = "required" })
                                        <span class="input-border"></span>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.hora, "", new { @class = "validation-message" })
                                </div>

                                <div class="text-center mt-4">
                                    <button type="submit" class="luxury-button">
                                        <span class="button-text">Crear Reserva</span>
                                        <span class="button-icon">
                                            <svg viewBox="0 0 24 24">
                                                <path fill="currentColor" d="M17,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3M19,19H5V5H16.17L19,7.83V19M12,12A4,4 0 0,0 8,16A4,4 0 0,0 12,20A4,4 0 0,0 16,16A4,4 0 0,0 12,12M12,14A2,2 0 0,1 14,16A2,2 0 0,1 12,18A2,2 0 0,1 10,16A2,2 0 0,1 12,14M6,6H15V10H6V6Z" />
                                            </svg>
                                        </span>
                                        <div class="button-shine"></div>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="text-center mt-4">
                    @Html.ActionLink("Volver al listado", "Index", null, new { @class = "luxury-link" })
                </div>
            </div>
        </div>
        }

<style>
.luxury-review-container {
    padding: 40px 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    min-height: 100vh;
}

.section-title {
    margin-bottom: 40px;
    position: relative;
}

.luxury-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
    border-radius: 50%;
    color: white;
    box-shadow: 0 10px 30px rgba(69, 196, 176, 0.3);
    animation: float 4s ease-in-out infinite;
}

.luxury-icon svg {
    width: 40px;
    height: 40px;
}

.luxury-title {
    font-size: 32px;
    font-weight: 600;
    color: #012030;
    margin-bottom: 15px;
}

.luxury-subtitle {
    color: #6c757d;
    font-size: 18px;
    max-width: 600px;
    margin: 0 auto 20px;
}

.luxury-divider {
    width: 80px;
    height: 3px;
    background: linear-gradient(90deg, #45C4B0 0%, #9AEBA3 100%);
    margin: 20px auto;
    border-radius: 3px;
}

.luxury-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    max-width: 800px;
    width: 90%;
    margin: 0 auto;
    padding: 40px;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.luxury-form {
    padding: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.luxury-input-group {
    width: 100%;
    max-width: 700px;
    margin: 0 auto 30px;
}

.input-label {
    display: block;
    margin-bottom: 12px;
    color: #495057;
    font-size: 16px;
    font-weight: 500;
    text-align: center;
    width: 100%;
}

.input-container {
    position: relative;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
}

.input-icon {
    position: absolute;
    left: 18px;
    top: 50%;
    transform: translateY(-50%);
    color: #45C4B0;
    z-index: 1;
}

.input-icon svg {
    width: 22px;
    height: 22px;
}

.luxury-select {
    width: 100%;
    padding: 18px 20px 18px 55px;
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.7);
    color: #495057;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
    appearance: none;
    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%2345C4B0' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 18px center;
    background-size: 16px;
}

.luxury-select:focus {
    border-color: #45C4B0;
    box-shadow: 0 0 0 4px rgba(69, 196, 176, 0.15);
    outline: none;
    background-color: white;
}

.luxury-input {
    width: 100%;
    padding: 18px 20px 18px 55px;
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.7);
    color: #495057;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
}

.luxury-input:focus {
    border-color: #45C4B0;
    box-shadow: 0 0 0 4px rgba(69, 196, 176, 0.15);
    outline: none;
    background-color: white;
}

.input-border {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #45C4B0 0%, #9AEBA3 100%);
    transition: width 0.4s ease;
}

.luxury-input:focus ~ .input-border {
    width: 100%;
}

.validation-message {
    display: block;
    color: #d32f2f;
    font-size: 14px;
    margin-top: 8px;
    text-align: center;
}

.luxury-alert {
    padding: 18px;
    background: #fff4f4;
    color: #d32f2f;
    border-radius: 12px;
    margin-bottom: 30px;
    border: 1px solid #ffcdd2;
    font-size: 15px;
    text-align: center;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
}

.luxury-button {
    position: relative;
    width: 100%;
    max-width: 320px;
    padding: 18px;
    background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 17px;
    font-weight: 600;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.4s ease;
    box-shadow: 0 10px 25px rgba(69, 196, 176, 0.25);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin: 30px auto 0;
}

.button-text {
    position: relative;
    z-index: 2;
}

.button-icon {
    position: relative;
    z-index: 2;
    display: flex;
    transition: transform 0.3s ease;
}

.button-icon svg {
    width: 22px;
    height: 22px;
}

.button-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
}

.luxury-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(69, 196, 176, 0.35);
}

.luxury-button:hover .button-shine {
    left: 100%;
}

.luxury-button:hover .button-icon {
    transform: translateX(5px);
}

.luxury-link {
    color: #45C4B0;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.3s ease;
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    font-size: 16px;
}

.luxury-link:hover {
    color: #13578A;
}

.luxury-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: #45C4B0;
    transition: width 0.3s ease;
}

.luxury-link:hover::after {
    width: 100%;
}

.info-message {
    color: #6c757d;
    font-style: italic;
    padding: 12px;
    background: #f8f9fa;
    border-radius: 8px;
    border-left: 4px solid #45C4B0;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
}

/* Animaciones */
@@keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
}

@@media (max-width: 768px) {
    .luxury-card {
        padding: 30px 20px;
        width: 95%;
    }

    .luxury-title {
        font-size: 28px;
    }

    .luxury-subtitle {
        font-size: 16px;
    }

    .luxury-input, .luxury-select {
        padding: 16px 15px 16px 50px;
        font-size: 15px;
    }
}

/* Animaciones */
@@keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
}

.luxury-icon {
    animation: float 4s ease-in-out infinite;
}

@@media (max-width: 768px) {
    .luxury-card {
        padding: 40px;
    }

    .luxury-title {
        font-size: 28px;
    }

    .luxury-subtitle {
        font-size: 16px;
    }
}
</style>

