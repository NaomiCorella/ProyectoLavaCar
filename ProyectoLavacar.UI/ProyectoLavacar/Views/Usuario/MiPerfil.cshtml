@model ProyectoLavacar.Models.PerfilEmpleado

@{
    ViewBag.Title = "MiPerfil";
}
<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Administración de Usuarios</title>
    <link href="~/Content/assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/default.css" rel="stylesheet" />
    <link href="~/Content/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets/css/slick.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/flaticon/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
</head>

<body>
    <h2>MiPerfil</h2>

    <div>
        <h4>PerfilEmpleado</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.primer_apellido)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.primer_apellido)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.segundo_apellido)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.segundo_apellido)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.turno)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.turno)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.puesto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.puesto)
            </dd>

        </dl>
    </div>
    <div>
        <h3>Reservas</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Servicio</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reserva in Model.reservas)
                {
                    <tr>
                        <td>@reserva.fecha</td>
                        <td>@reserva.hora</td>
                        <td>@reserva.idServicio</td>
                        <td>@reserva.estado</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <h3>Desempeño</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>calificacion</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var evaluacion in Model.evaluaciones)
                {
                    <tr>
                        <td>@evaluacion.fechaEvaluacion</td>
                        <td>@evaluacion.calificacion</td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <h3>Nomina</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Concepto</th>
                    <th>Monto</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var nomina in Model.nomina)
                {
                    <tr>
                        <td>@nomina.FechaDePago</td>
                        <td>@nomina.PeriodoDePago</td>
                        <td>@nomina.SalarioNeto</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="navbar-btn">
        @Html.ActionLink("Ingresar Vacaciones", "IngresarVacaciones", "Nomina", new { area = "" }, new { @class = "navbar-brand" })
    </div>

    <p>
        @if (ViewBag.estadoRegistro == null)
        {
            <a href="@Url.Action("RegistrarHoraEntrada")" class="btn btn-outline-success btn-sm me-2" title="RegistrarHoraEntrada">
                RegistrarHoraEntrada
            </a>
        }
        else
        {
            if (ViewBag.ValidacionRegistro)
            {
            <p>
                Ya ingreso su registro de horas por el dia. En caso de problemas hable con su administrador
            </p>

        }
        else
        {
            if (!ViewBag.estadoRegistro)
            {

                <a href="@Url.Action("RegistrarHoraSalida")" class="btn btn-outline-success btn-sm me-2" title="RegistrarHoraSalida">
                    RegistrarHoraSalida
                </a>
            }
            else
            {
                <a href="@Url.Action("RegistrarHoraEntrada")" class="btn btn-outline-success btn-sm me-2" title="RegistrarHoraEntrada">
                    RegistrarHoraEntrada
                </a>
            }
        }

    }

        <a href="@Url.Action("Edit", new { id = Model.id })" class="btn btn-outline-info btn-sm me-2" title="Editar">
            <i class="fas fa-edit"></i> Editar
        </a>
        @Html.ActionLink("Back to List", "Index")
        </p>
        <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
        <script src="~/Content/assets/js/vendor/modernizr-3.6.0.min.js"></script>
        <script src="~/Content/assets/js/bootstrap.min.js"></script>
        <script src="~/Content/assets/js/imagesloaded.pkgd.min.js"></script>
        <script src="~/Content/assets/js/isotope.pkgd.min.js"></script>
        <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
        <script src="~/Content/assets/js/jquery.magnific-popup.min.js"></script>
        <script src="~/Content/assets/js/main.js"></script>
        <script src="~/Content/assets/js/popper.min.js"></script>
        <script src="~/Content/assets/js/slick.min.js"></script>
        <script src="~/Content/assets/js/waypoints.min.js"></script>
        <script src="~/Content/assets/js/wow.min.js"></script>
    </body>