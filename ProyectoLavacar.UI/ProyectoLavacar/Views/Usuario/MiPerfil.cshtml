@model ProyectoLavacar.Models.PerfilEmpleado

@{
    ViewBag.Title = "MiPerfil";
}
<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Mi Perfil - Empleado</title>
    <link href="~/Content/assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/default.css" rel="stylesheet" />
    <link href="~/Content/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets/css/slick.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/flaticon/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
</head>

<body>
    <div class="luxury-employee-container">
        <div class="container">
            <div class="section-title text-center">
                <div class="luxury-icon">
                    <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                    </svg>
                </div>
                <h2 class="luxury-title">Mi Perfil</h2>
                <p class="luxury-subtitle">Panel de empleado - @Model.puesto</p>
                <div class="luxury-divider"></div>
            </div>

            <div class="row">
                <!-- Perfil de Empleado -->
                <div class="col-lg-4">
                    <div class="luxury-card shadow-lg rounded mb-4">
                        <div class="card-body">
                            @*<div class="text-center mb-4">
                                    <img src="~/assets/images/avatar.png" class="luxury-avatar rounded-circle" alt="Avatar">
                                </div>*@

                            <!-- Información Personal -->
                            <div class="luxury-profile-section">
                                <h5 class="luxury-section-title">
                                    <svg viewBox="0 0 24 24" width="24" height="24" class="me-2">
                                        <path fill="currentColor" d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                                    </svg>
                                    Información Personal
                                </h5>
                                <div class="luxury-divider-small"></div>
                                <dl class="luxury-profile-details">
                                    <div class="luxury-detail-row">
                                        <dt>Nombre completo</dt>
                                        <dd>@Model.nombre @Model.primer_apellido @Model.segundo_apellido</dd>
                                    </div>
                                    <div class="luxury-detail-row">
                                        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
                                        <dd>@Html.DisplayFor(model => model.Email)</dd>
                                    </div>
                                    <div class="luxury-detail-row">
                                        <dt>@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                                        <dd>@Html.DisplayFor(model => model.PhoneNumber)</dd>
                                    </div>
                                    <div class="luxury-detail-row">
                                        <dt>@Html.DisplayNameFor(model => model.turno)</dt>
                                        <dd>@Html.DisplayFor(model => model.turno)</dd>
                                    </div>
                                    <div class="luxury-detail-row">
                                        <dt>@Html.DisplayNameFor(model => model.puesto)</dt>
                                        <dd>@Html.DisplayFor(model => model.puesto)</dd>
                                    </div>
                                </dl>
                            </div>

                            <!-- Botones -->
                            <div class="d-flex flex-column gap-3 mt-4">
                                <a href="@Url.Action("Edit", "Empleado", new { id = Model.id })" class="luxury-button luxury-button-secondary1">
                                    <span class="button-text">Actualizar Información</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </a>
                                <form id="logoutForm" action="@Url.Action("LogOff", "Account")" method="post" class="w-100">
                                    <button type="submit" class="luxury-button luxury-button-danger">
                                        <span class="button-text">Cerrar Sesión</span>
                                        <span class="button-icon">
                                            <svg viewBox="0 0 24 24">
                                                <path fill="currentColor" d="M16,17V14H9V10H16V7L21,12L16,17M14,2A2,2 0 0,1 16,4V6H14V4H5V20H14V18H16V20A2,2 0 0,1 14,22H5A2,2 0 0,1 3,20V4A2,2 0 0,1 5,2H14Z" />
                                            </svg>
                                        </span>
                                        <div class="button-shine"></div>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Acciones del Empleado -->
                    <div class="luxury-card shadow-lg rounded mb-4">
                        <div class="card-body">
                            <h5 class="luxury-section-title text-center mb-4">
                                <svg viewBox="0 0 24 24" width="24" height="24" class="me-2">
                                    <path fill="currentColor" d="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" />
                                </svg>
                                Acciones
                            </h5>
                            <div class="luxury-divider-small"></div>

                            <div class="d-flex flex-column gap-3">
                                @if (ViewBag.estadoRegistro == null)
                                {
                                    <a href="@Url.Action("RegistrarHoraEntrada")" class="luxury-button luxury-button-outline">
                                        <span class="button-text">Registrar Hora Entrada</span>
                                        <span class="button-icon">
                                            <svg viewBox="0 0 24 24">
                                                <path fill="currentColor" d="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" />
                                            </svg>
                                        </span>
                                        <div class="button-shine"></div>
                                    </a>
                                }
                                else
                                {
                                    if (ViewBag.ValidacionRegistro)
                                    {
                                        <div class="luxury-alert luxury-alert-danger">
                                            <svg viewBox="0 0 24 24" width="20" height="20" class="me-2">
                                                <path fill="currentColor" d="M12,2L1,21H23M12,6L19.53,19H4.47M11,10V14H13V10M11,16V18H13V16" />
                                            </svg>
                                            Ya ingresó su registro de horas por el día. En caso de problemas, hable con su administrador.
                                        </div>
                                    }
                                    else
                                    {
                                        if (!ViewBag.estadoRegistro)
                                        {
                                            <a href="@Url.Action("RegistrarHoraSalida")" class="luxury-button luxury-button-outline">
                                                <span class="button-text">Registrar Hora Salida</span>
                                                <span class="button-icon">
                                                    <svg viewBox="0 0 24 24">
                                                        <path fill="currentColor" d="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" />
                                                    </svg>
                                                </span>
                                                <div class="button-shine"></div>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("RegistrarHoraEntrada")" class="luxury-button luxury-button-outline">
                                                <span class="button-text">Registrar Hora Entrada</span>
                                                <span class="button-icon">
                                                    <svg viewBox="0 0 24 24">
                                                        <path fill="currentColor" d="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" />
                                                    </svg>
                                                </span>
                                                <div class="button-shine"></div>
                                            </a>
                                        }
                                    }
                                }

                                <a href="@Url.Action("Index", "ReporteEmp")" class="luxury-button luxury-button-outline">
                                    <span class="button-text">Ver Reportes</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M9,17H7V10H9V17M13,17H11V7H13V17M17,17H15V13H17V17Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </a>

                                <a href="@Url.Action("IngresarVacaciones", "Nomina")" class="luxury-button luxury-button-outline">
                                    <span class="button-text">Ingresar Vacaciones</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M13,16V20H11V16H6V21H4V15H13V16M4,9H6V14H4V9M20,14H22V9H20V14M14,4H16V21H14V4M8,4H10V21H8V4Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <!-- Card for Reservas -->
                    <div class="luxury-card shadow-lg rounded mb-4">
                        <div class="card-body">
                            <h3 class="luxury-card-title mb-4">
                                <svg viewBox="0 0 24 24" width="24" height="24" class="me-2">
                                    <path fill="currentColor" d="M19,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,19H5V8H19V19M16.5,15.25V17H15V15.25H13.5L16,12.75L18.5,15.25H16.5M7.5,10.5V9H9V10.5H10.5L8,13L5.5,10.5H7.5Z" />
                                </svg>
                                Reservas Encargadas
                            </h3>
                            <div class="table-responsive">
                                <table class="luxury-table">
                                    <thead>
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Hora</th>
                                            <th>Servicio</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var reserva in Model.reservas.Take(3))
                                        {
                                            <tr>
                                                <td>@reserva.fecha</td>
                                                <td>@reserva.hora</td>
                                                <td>@reserva.idServicio</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center mt-3">
                                <a href="@Url.Action("ReservasEncargadas", "Reservas")" class="luxury-button luxury-button-outline">
                                    <span class="button-text">Ver todas las reservas</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M9,5V9H21V5M9,19H21V15H9M9,14H21V10H9M4,9H8V5H4M4,19H8V15H4M4,14H8V10H4V14Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Card for Evaluaciones -->
                    <div class="luxury-card shadow-lg rounded mb-4">
                        <div class="card-body">
                            <h3 class="luxury-card-title mb-4">
                                <svg viewBox="0 0 24 24" width="24" height="24" class="me-2">
                                    <path fill="currentColor" d="M12,2L14.39,8.75H21.6L16.04,13.13L18.33,19.64L12,15.5L5.67,19.64L7.96,13.13L2.4,8.75H9.61L12,2M12,5.86L10.5,9.91H5.35L8.5,12.72L7.33,17.14L12,14.5L16.67,17.14L15.5,12.72L18.65,9.91H13.5L12,5.86Z" />
                                </svg>
                                Evaluaciones de Desempeño
                            </h3>
                            <div class="table-responsive">
                                <table class="luxury-table">
                                    <thead>
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Calificación</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var evaluacion in Model.evaluaciones.Take(3))
                                        {
                                            <tr>
                                                <td>@evaluacion.fechaEvaluacion</td>
                                                <td>
                                                    <div class="luxury-rating">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            if (i <= evaluacion.calificacion)
                                                            {
                                                                <svg viewBox="0 0 24 24" width="16" height="16" fill="#FFD700">
                                                                    <path d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z" />
                                                                </svg>
                                                            }
                                                            else
                                                            {
                                                                <svg viewBox="0 0 24 24" width="16" height="16" fill="#D3D3D3">
                                                                    <path d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z" />
                                                                </svg>
                                                            }
                                                        }
                                                        <span class="ms-2">(@evaluacion.calificacion/5)</span>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center mt-3">
                                <a href="@Url.Action("MisEvaluaciones","Empleado", new { id = Model.id })" class="luxury-button luxury-button-outline">
                                    <span class="button-text">Ver todas las evaluaciones</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M9,5V9H21V5M9,19H21V15H9M9,14H21V10H9M4,9H8V5H4M4,19H8V15H4M4,14H8V10H4V14Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Card for Nómina -->
                    <div class="luxury-card shadow-lg rounded mb-4">
                        <div class="card-body">
                            <h3 class="luxury-card-title mb-4">
                                <svg viewBox="0 0 24 24" width="24" height="24" class="me-2">
                                    <path fill="currentColor" d="M12,3L2,12H5V20H19V12H22L12,3M12,7.7L16,11.2V18H14V14H10V18H8V11.2L12,7.7Z" />
                                </svg>
                                Nómina
                            </h3>
                            <div class="table-responsive">
                                <table class="luxury-table">
                                    <thead>
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Concepto</th>
                                            <th>Monto</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var nomina in Model.nomina.Take(3))
                                        {
                                            <tr>
                                                <td>@nomina.FechaDePago</td>
                                                <td>@nomina.PeriodoDePago</td>
                                                <td class="luxury-price">@nomina.SalarioNeto</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center mt-3">
                                <a href="@Url.Action("Nomina","Nomina", new { idEmpleado = Model.id })" class="luxury-button luxury-button-outline">
                                    <span class="button-text">Ver historial completo</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M9,5V9H21V5M9,19H21V15H9M9,14H21V10H9M4,9H8V5H4M4,19H8V15H4M4,14H8V10H4V14Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/assets/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/wow.min.js"></script>
</body>
</html>

<style>
    .luxury-employee-container {
        padding: 40px 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
    }

    .section-title {
        margin-bottom: 40px;
        position: relative;
    }

    .luxury-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        border-radius: 50%;
        color: white;
        box-shadow: 0 10px 30px rgba(69, 196, 176, 0.3);
    }

        .luxury-icon svg {
            width: 40px;
            height: 40px;
        }

    .luxury-title {
        font-size: 32px;
        font-weight: 600;
        color: #012030;
        margin-bottom: 15px;
    }

    .luxury-subtitle {
        color: #6c757d;
        font-size: 18px;
        max-width: 600px;
        margin: 0 auto 20px;
    }

    .luxury-divider {
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #45C4B0 0%, #9AEBA3 100%);
        margin: 20px auto;
        border-radius: 3px;
    }

    .luxury-divider-small {
        width: 60px;
        height: 2px;
        background: linear-gradient(90deg, #45C4B0 0%, #9AEBA3 100%);
        margin: 10px 0 15px;
        border-radius: 2px;
    }

    .luxury-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        margin-bottom: 25px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .luxury-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
        }

    .luxury-card-title {
        font-size: 22px;
        font-weight: 600;
        color: #012030;
        display: flex;
        align-items: center;
    }

    .luxury-profile-section {
        margin-bottom: 25px;
    }

    .luxury-section-title {
        font-size: 18px;
        font-weight: 600;
        color: #45C4B0;
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .luxury-profile-details {
        margin: 0;
        padding: 0;
    }

    .luxury-detail-row {
        display: flex;
        margin-bottom: 12px;
        padding-bottom: 12px;
        border-bottom: 1px solid #f0f0f0;
    }

        .luxury-detail-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .luxury-detail-row dt {
            width: 160px;
            font-weight: 600;
            color: #495057;
        }

        .luxury-detail-row dd {
            flex: 1;
            color: #6c757d;
            margin: 0;
        }

    .luxury-table {
        width: 100%;
        border-collapse: collapse;
    }

        .luxury-table th {
            background-color: #f8f9fa;
            padding: 12px 15px;
            text-align: left;
            font-weight: 600;
            color: #495057;
            border-bottom: 2px solid #45C4B0;
        }

        .luxury-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #f0f0f0;
