@model ProyectoLavacar.Models.PerfilUsuario

@{
    ViewBag.Title = "Perfil";
}
<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Mi Perfil</title>
    <link href="~/Content/assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/default.css" rel="stylesheet" />
    <link href="~/Content/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets/css/slick.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/flaticon/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
</head>

<body>
    <div class="luxury-review-container">
        <div class="container">
            <div class="section-title text-center">
                <div class="luxury-icon">
                    <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                    </svg>
                </div>
                <h2 class="luxury-title">Mi Perfil</h2>
                <p class="luxury-subtitle">Bienvenido a tu espacio personal</p>
                <div class="luxury-divider"></div>
            </div>

            <div class="row">
                <!-- Perfil de Usuario -->
                <div class="col-lg-4">
                    <div class="luxury-card shadow-lg rounded mb-4">
                        <div class="card-body">
                            @*<h4 class="luxury-card-title text-center mb-4">Perfil de Usuario</h4>*@

                            <!-- Información Personal -->
                            <div class="luxury-profile-section">
                                <h5 class="luxury-section-title">
                                    <svg viewBox="0 0 24 24" width="24" height="24" class="me-2">
                                        <path fill="currentColor" d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                                    </svg>
                                    Información Personal
                                </h5>
                                <div class="luxury-divider-small"></div>
                                <dl class="luxury-profile-details">
                                    <div class="luxury-detail-row">
                                        <dt>@Html.DisplayNameFor(model => model.nombre)</dt>
                                        <dd>@Html.DisplayFor(model => model.nombre)</dd>
                                    </div>
                                    <div class="luxury-detail-row">
                                        <dt>@Html.DisplayNameFor(model => model.primer_apellido)</dt>
                                        <dd>@Html.DisplayFor(model => model.primer_apellido)</dd>
                                    </div>
                                    <div class="luxury-detail-row">
                                        <dt>@Html.DisplayNameFor(model => model.segundo_apellido)</dt>
                                        <dd>@Html.DisplayFor(model => model.segundo_apellido)</dd>
                                    </div>
                                    <div class="luxury-detail-row">
                                        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
                                        <dd>@Html.DisplayFor(model => model.Email)</dd>
                                    </div>
                                    <div class="luxury-detail-row">
                                        <dt>@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                                        <dd>@Html.DisplayFor(model => model.PhoneNumber)</dd>
                                    </div>
                                </dl>
                            </div>

                            <!-- Botones -->
                            <div class="d-flex flex-column gap-3 mt-4">
                                <a href="@Url.Action("Edit", new { id = Model.id })" class="luxury-button luxury-button-secondary1">
                                    <span class="button-text">Actualizar Información</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </a>
                                <a href="@Url.Action("ChangePassword", "Account")" class="luxury-button luxury-button-secondary">
                                    <span class="button-text">Cambiar Contraseña</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M12,7C13.4,7 14.8,8.1 14.8,9.5V11C15.4,11 16,11.6 16,12.2V15.7C16,16.4 15.4,17 14.7,17H9.2C8.6,17 8,16.4 8,15.8V12.3C8,11.6 8.6,11 9.2,11V9.5C9.2,8.1 10.6,7 12,7M12,8.2C11.2,8.2 10.5,8.7 10.5,9.5V11H13.5V9.5C13.5,8.7 12.8,8.2 12,8.2Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </a>
                                <form id="logoutForm" action="@Url.Action("LogOff", "Account")" method="post" class="w-100">
                                    <button type="submit" class="luxury-button luxury-button-danger">
                                        <span class="button-text">Cerrar Sesión</span>
                                        <span class="button-icon">
                                            <svg viewBox="0 0 24 24">
                                                <path fill="currentColor" d="M16,17V14H9V10H16V7L21,12L16,17M14,2A2,2 0 0,1 16,4V6H14V4H5V20H14V18H16V20A2,2 0 0,1 14,22H5A2,2 0 0,1 3,20V4A2,2 0 0,1 5,2H14Z" />
                                            </svg>
                                        </span>
                                        <div class="button-shine"></div>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <!-- Card for Reservas -->
                    <div class="luxury-card shadow-lg rounded mb-4">
                        <div class="card-body">
                            <h3 class="luxury-card-title mb-4">
                                <svg viewBox="0 0 24 24" width="24" height="24" class="me-2">
                                    <path fill="currentColor" d="M19,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,19H5V8H19V19M16.5,15.25V17H15V15.25H13.5L16,12.75L18.5,15.25H16.5M7.5,10.5V9H9V10.5H10.5L8,13L5.5,10.5H7.5Z" />
                                </svg>
                                Mis Reservas
                            </h3>
                            <div class="table-responsive">
                                <table class="luxury-table">
                                    <thead>
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Hora</th>
                                            <th>Servicio</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var reserva in Model.reservas.Take(3))
                                        {
                                            <tr>
                                                <td>@reserva.fecha</td>
                                                <td>@(DateTime.TryParse(reserva.hora, out DateTime parsedTime) ? parsedTime.ToString("HH:mm") : reserva.hora)</td>
                                                <td>@reserva.idServicio</td>
                                                <td>
                                                    <span class="luxury-status-badge @(reserva.estado ? "pendiente" : "completado")">
                                                        @(reserva.estado ? "Pendiente" : "Completado")
                                                    </span>
                                                </td>


                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center mt-3">
                                <a href="@Url.Action("MisReservas", "Reservas")" class="luxury-button luxury-button-outline">
                                    <span class="button-text">Ver todas mis reservas</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M9,5V9H21V5M9,19H21V15H9M9,14H21V10H9M4,9H8V5H4M4,19H8V15H4M4,14H8V10H4V14Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Card for Compras -->
                    <div class="luxury-card shadow-lg rounded mb-4">
                        <div class="card-body">
                            <h3 class="luxury-card-title mb-4">
                                <svg viewBox="0 0 24 24" width="24" height="24" class="me-2">
                                    <path fill="currentColor" d="M5,6H23V18H5V6M14,9A3,3 0 0,1 17,12A3,3 0 0,1 14,15A3,3 0 0,1 11,12A3,3 0 0,1 14,9M9,8A2,2 0 0,1 7,10V14A2,2 0 0,1 9,16H19A2,2 0 0,1 21,14V10A2,2 0 0,1 19,8H9M1,10H3V20H19V22H1V10Z" />
                                </svg>
                                Mis Compras
                            </h3>
                            <div class="table-responsive">
                                <table class="luxury-table">
                                    <thead>
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Total</th>
                                            <th>Detalles</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var compras in Model.compras.Take(3))
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => compras.Fecha)</td>
                                                <td class="luxury-price">@Html.DisplayFor(modelItem => compras.Total)</td>
                                                <td>
                                                    <a href="@Url.Action("DetallesCompra", "Compra", new { idCompra = compras.idCompra })" class="luxury-link">
                                                        <svg viewBox="0 0 24 24" width="16" height="16">
                                                            <path fill="currentColor" d="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z" />
                                                        </svg>
                                                        Ver detalles
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center mt-3">
                                <a href="@Url.Action("MisCompras", "Compra")" class="luxury-button luxury-button-outline">
                                    <span class="button-text">Ver todas mis compras</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M9,5V9H21V5M9,19H21V15H9M9,14H21V10H9M4,9H8V5H4M4,19H8V15H4M4,14H8V10H4V14Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/assets/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/wow.min.js"></script>
</body>
</html>

<style>

    .luxury-status-badge {
        display: inline-block;
        min-width: 80px; /* o el valor que necesités */
        text-align: center;
        padding: 5px 10px;
        border-radius: 20px;
        font-weight: bold;
        color: black;
        white-space: nowrap;
    }

        /*.luxury-status-badge.activo {
            background-color: #4CAF50;*/ /* verde */
        /*}

        .luxury-status-badge.inactivo {
            background-color: #f44336;*/ /* rojo */
        /*}*/



    .luxury-review-container {
        padding: 40px 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
    }

    .section-title {
        margin-bottom: 40px;
        position: relative;
    }

    .luxury-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        border-radius: 50%;
        color: white;
        box-shadow: 0 10px 30px rgba(69, 196, 176, 0.3);
    }

        .luxury-icon svg {
            width: 40px;
            height: 40px;
        }

    .luxury-title {
        font-size: 32px;
        font-weight: 600;
        color: #012030;
        margin-bottom: 15px;
    }

    .luxury-subtitle {
        color: #6c757d;
        font-size: 18px;
        max-width: 600px;
        margin: 0 auto 20px;
    }

    .luxury-divider {
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #45C4B0 0%, #9AEBA3 100%);
        margin: 20px auto;
        border-radius: 3px;
    }

    .luxury-divider-small {
        width: 60px;
        height: 2px;
        background: linear-gradient(90deg, #45C4B0 0%, #9AEBA3 100%);
        margin: 10px 0 15px;
        border-radius: 2px;
    }

    .luxury-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        margin-bottom: 25px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .luxury-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
        }

    .luxury-card-title {
        font-size: 22px;
        font-weight: 600;
        color: #012030;
        display: flex;
        align-items: center;
    }

    .luxury-profile-section {
        margin-bottom: 25px;
    }

    .luxury-section-title {
        font-size: 18px;
        font-weight: 600;
        color: #45C4B0;
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .luxury-profile-details {
        margin: 0;
        padding: 0;
    }

    .luxury-detail-row {
        display: flex;
        margin-bottom: 12px;
        padding-bottom: 12px;
        border-bottom: 1px solid #f0f0f0;
    }

        .luxury-detail-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .luxury-detail-row dt {
            width: 160px;
            font-weight: 600;
            color: #495057;
        }

        .luxury-detail-row dd {
            flex: 1;
            color: #6c757d;
            margin: 0;
        }

    .luxury-table {
        width: 100%;
        border-collapse: collapse;
    }

        .luxury-table th {
            background-color: #f8f9fa;
            padding: 12px 15px;
            text-align: left;
            font-weight: 600;
            color: #495057;
            border-bottom: 2px solid #45C4B0;
        }

        .luxury-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #f0f0f0;
            color: #6c757d;
        }

        .luxury-table tbody tr:hover {
            background-color: #f8f9fa;
        }

    .luxury-status-badge {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
    }

        .luxury-status-badge.active {
            background-color: rgba(69, 196, 176, 0.1);
            color: #218838;
        }

        .luxury-status-badge.inactive {
            background-color: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

    .luxury-price {
        font-weight: 700;
        color: #218838 !important;
    }

    .luxury-button {
        position: relative;
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        overflow: hidden;
        transition: all 0.4s ease;
        box-shadow: 0 10px 20px rgba(69, 196, 176, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin: 5px 0;
    }

    .luxury-button-secondary1 {
        background: linear-gradient(135deg, #6ba7db 0%, #66cfd3 100%);
        box-shadow: 0 6px 12px rgba(108, 117, 125, 0.15);
    }

    .luxury-button-secondary {
        background: linear-gradient(135deg, #283c86d 0%, #45a247 100%);
        box-shadow: 0 10px 20px rgba(108, 117, 125, 0.2);
    }

    .luxury-button-danger {
        background: linear-gradient(135deg, #dc3545 0%, #f8b3ba 100%);
        box-shadow: 0 10px 20px rgba(220, 53, 69, 0.2);
    }

    .luxury-button-outline {
        background: transparent;
        border: 2px solid #45C4B0;
        color: #45C4B0;
        box-shadow: none;
    }

        .luxury-button-outline:hover {
            background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
            color: white;
        }

    .button-text {
        position: relative;
        z-index: 2;
    }

    .button-icon {
        position: relative;
        z-index: 2;
        display: flex;
        transition: transform 0.3s ease;
    }

        .button-icon svg {
            width: 20px;
            height: 20px;
        }

    .button-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.6s ease;
    }

    .luxury-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(69, 196, 176, 0.3);
    }

        .luxury-button:hover .button-shine {
            left: 100%;
        }

        .luxury-button:hover .button-icon {
            transform: translateX(5px);
        }

    .luxury-link {
        color: #45C4B0;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

        .luxury-link:hover {
            color: #13578A;
            text-decoration: underline;
        }

    /* Animaciones */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .luxury-icon {
        animation: float 4s ease-in-out infinite;
    }

    @@media (max-width: 992px) {
        .luxury-detail-row {
            flex-direction: column;
        }

            .luxury-detail-row dt {
                width: 100%;
                margin-bottom: 5px;
            }
    }

    @@media (max-width: 768px) {
        .luxury-card {
            padding: 20px;
        }

        .luxury-title {
            font-size: 28px;
        }

        .luxury-subtitle {
            font-size: 16px;
        }

        .luxury-card-title {
            font-size: 20px;
        }

        .luxury-button {
            padding: 12px;
            font-size: 15px;
        }
    }
</style>