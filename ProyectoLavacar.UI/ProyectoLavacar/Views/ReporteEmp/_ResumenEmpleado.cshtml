
@{
    decimal totalVentas = ViewBag.TotalVentasEmpleado ?? 0;
    decimal margenVentas = ViewBag.MargenVentas ?? 0;
    decimal margenPorcentual = ViewBag.MargenPorcentual ?? 0;
    decimal promedioCalificacion = ViewBag.PromedioCalificacion ?? 0;
}

<div class="card shadow-sm p-4">
    <h4 class="mb-3 text-center">Resumen del Empleado</h4>

    <div class="row">
        <!-- Total de Ventas -->
        <div class="col-md-6">
            <div class="card bg-light p-3 text-center">
                <h5>Total de Ventas</h5>
                <p class="display-6 text-primary">@totalVentas.ToString("C")</p>
            </div>
        </div>

        <!-- Margen de Ventas -->
        <div class="col-md-6">
            <div class="card bg-light p-3 text-center">
                <h5>Margen de Ventas</h5>
                <p class="display-6 text-success">@margenVentas.ToString("C")</p>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <!-- Margen Porcentual -->
        <div class="col-md-6">
            <div class="card bg-light p-3 text-center">
                <h5>Margen Porcentual</h5>
                <p class="display-6 text-warning">@margenPorcentual.ToString("0.00")%</p>
            </div>
        </div>

        <!-- Promedio de Calificación -->
        <div class="col-md-6">
            <div class="card bg-light p-3 text-center">
                <h5>Promedio de Calificación</h5>
                <p class="display-6 text-info">@promedioCalificacion.ToString("0.0")</p>
            </div>
        </div>
    </div>
</div>