
@{
    decimal margenVentas = ViewBag.MargenVentas ?? 0;
    decimal margenPorcentual = ViewBag.MargenPorcentual ?? 0;
}

<div class="dashboard-panel">
    <h2>Margen de Ventas</h2>
    <p class="amount">₡@margenVentas.ToString("N2")</p> <!-- Formato de moneda -->

    <h3>Margen Porcentual</h3>
    <p class="percentage">@(margenPorcentual.ToString("N2"))%</p>
</div>

<style>
    .dashboard-panel {
        width: 300px;
        padding: 20px;
        background: #28a745; /* Color verde */
        color: white;
        text-align: center;
        border-radius: 10px;
        font-family: Arial, sans-serif;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
    }

        .dashboard-panel h2, .dashboard-panel h3 {
            font-size: 20px;
            margin-bottom: 10px;
        }

        .dashboard-panel .amount {
            font-size: 30px;
            font-weight: bold;
        }

        .dashboard-panel .percentage {
            font-size: 24px;
            font-weight: bold;
        }
</style>