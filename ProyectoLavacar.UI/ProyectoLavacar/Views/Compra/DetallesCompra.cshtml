@model ProyectoLavacar.Abstraciones.Modelos.ModuloCompra.CompraCompletaDto

@{
    ViewBag.Title = "Detalles de Compra";
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Detalles de Compra</title>
    <link href="~/Content/assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/default.css" rel="stylesheet" />
    <link href="~/Content/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets/css/slick.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/flaticon/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
</head>

<body>
    <div class="luxury-review-container">
        <div class="container">
            <div class="section-title text-center">
                <div class="luxury-icon">
                    <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12,13A5,5 0 0,1 7,8H9A3,3 0 0,0 12,11A3,3 0 0,0 15,8H17A5,5 0 0,1 12,13M12,3A3,3 0 0,1 15,6H9A3,3 0 0,1 12,3M19,6H17A5,5 0 0,0 12,1A5,5 0 0,0 7,6H5C3.89,6 3,6.89 3,8V20A2,2 0 0,0 5,22H19A2,2 0 0,0 21,20V8C21,6.89 20.1,6 19,6Z" />
                    </svg>
                </div>
                <h2 class="luxury-title">Detalles de Compra</h2>
                <p class="luxury-subtitle">Información completa de la transacción</p>
                <div class="luxury-divider"></div>
            </div>

            <div class="luxury-card shadow-lg rounded">
                <div class="card-body">
                    <div class="luxury-details-table">
                        <div class="luxury-details-header">
                            <svg viewBox="0 0 24 24" width="24" height="24">
                                <path fill="currentColor" d="M3,22V8H7V22H3M10,22V2H14V22H10M17,22V14H21V22H17Z" />
                            </svg>
                            <span>Información de la Compra</span>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.Nombre)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.PrimerApellido) @Html.DisplayFor(model => model.SegundoApellido)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.Cedula)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.Cedula)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.NombreEmp)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.NombreEmp) @Html.DisplayFor(model => model.PrimerApellidoEmp)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.Total)</div>
                            <div class="luxury-details-value luxury-price">@Html.DisplayFor(model => model.Total)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.Fecha)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.Fecha)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.DescripcionServicio)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.DescripcionServicio)</div>
                        </div>
                    </div>

                    <div class="luxury-services-table mt-5">
                        <div class="luxury-details-header">
                            <svg viewBox="0 0 24 24" width="24" height="24">
                                <path fill="currentColor" d="M18,14H20V17H23V19H20V22H18V19H15V17H18V14M4,3H18A2,2 0 0,1 20,5V12.08C18.45,11.82 16.92,12.18 15.68,13H12V17H13.08C12.97,17.68 12.97,18.35 13.08,19H4A2,2 0 0,1 2,17V5A2,2 0 0,1 4,3M4,7V11H10V7H4M12,7V11H18V7H12M4,13V17H10V13H4Z" />
                            </svg>
                            <span>Servicios Incluidos</span>
                        </div>
                        <table class="luxury-table">
                            <thead>
                                <tr>
                                    <th>Nombre del Servicio</th>
                                    <th>Costo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var servicio in Model.listaDeServicios)
                                {
                                    <tr>
                                        <td>@servicio.nombre</td>
                                        <td class="text-right">@servicio.precio.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th class="text-right">Total:</th>
                                    <th class="text-right">@Model.Total.ToString("C")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="text-center mt-5">
                        <a href="@Url.Action("DescargarPDFCompra", new { idCompra = Model.idCompra })" class="luxury-button">
                            <span class="button-text">Descargar PDF</span>
                            <span class="button-icon">
                                <svg viewBox="0 0 24 24">
                                    <path fill="currentColor" d="M5,20H19V18H5M19,9H15V3H9V9H5L12,16L19,9Z" />
                                </svg>
                            </span>
                            <div class="button-shine"></div>
                        </a>

                        <a href="javascript:history.back()" class="luxury-button luxury-button-secondary ml-3">
                            <span class="button-text">Volver al Listado</span>
                            <span class="button-icon">
                                <svg viewBox="0 0 24 24">
                                    <path fill="currentColor" d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" />
                                </svg>
                            </span>
                            <div class="button-shine"></div>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/assets/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/wow.min.js"></script>
</body>
</html>

<style>
    .luxury-review-container {
        padding: 40px 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
    }

    .section-title {
        margin-bottom: 40px;
        position: relative;
    }

    .luxury-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        border-radius: 50%;
        color: white;
        box-shadow: 0 10px 30px rgba(69, 196, 176, 0.3);
    }

        .luxury-icon svg {
            width: 40px;
            height: 40px;
        }

    .luxury-title {
        font-size: 32px;
        font-weight: 600;
        color: #012030;
        margin-bottom: 15px;
    }

    .luxury-subtitle {
        color: #6c757d;
        font-size: 18px;
        max-width: 600px;
        margin: 0 auto 20px;
    }

    .luxury-divider {
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #45C4B0 0%, #9AEBA3 100%);
        margin: 20px auto;
        border-radius: 3px;
    }

    .luxury-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        max-width: 900px;
        margin: 0 auto;
        padding: 30px;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .luxury-details-table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
    }

    .luxury-services-table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
        margin-top: 30px;
    }

    .luxury-details-header {
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        color: white;
        padding: 15px 20px;
        font-size: 18px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .luxury-details-header svg {
            width: 20px;
            height: 20px;
        }

    .luxury-details-row {
        display: flex;
        border-bottom: 1px solid #f0f0f0;
    }

        .luxury-details-row:last-child {
            border-bottom: none;
        }

    .luxury-details-label {
        width: 40%;
        padding: 15px 20px;
        font-weight: 600;
        color: #495057;
        background-color: #f9f9f9;
    }

    .luxury-details-value {
        width: 60%;
        padding: 15px 20px;
        color: #6c757d;
    }

    .luxury-price {
        font-weight: 700;
        color: #218838 !important;
        font-size: 18px;
    }

    .luxury-table {
        width: 100%;
        border-collapse: collapse;
    }

        .luxury-table th {
            background-color: #f8f9fa;
            padding: 12px 20px;
            text-align: left;
            font-weight: 600;
            color: #495057;
        }

        .luxury-table td {
            padding: 12px 20px;
            border-bottom: 1px solid #f0f0f0;
            color: #6c757d;
        }

        .luxury-table tfoot th {
            background-color: #f1f8ff;
            color: #0056b3;
        }

        .luxury-table tbody tr:hover {
            background-color: #f8f9fa;
        }

    .text-right {
        text-align: right;
    }

    .luxury-button {
        position: relative;
        width: 100%;
        max-width: 250px;
        padding: 16px;
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        overflow: hidden;
        transition: all 0.4s ease;
        box-shadow: 0 10px 20px rgba(69, 196, 176, 0.2);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin: 10px 5px;
    }

    .luxury-button-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #adb5bd 100%);
        box-shadow: 0 10px 20px rgba(108, 117, 125, 0.2);
    }

    .button-text {
        position: relative;
        z-index: 2;
    }

    .button-icon {
        position: relative;
        z-index: 2;
        display: flex;
        transition: transform 0.3s ease;
    }

        .button-icon svg {
            width: 20px;
            height: 20px;
        }

    .button-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.6s ease;
    }

    .luxury-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(69, 196, 176, 0.3);
    }

        .luxury-button:hover .button-shine {
            left: 100%;
        }

        .luxury-button:hover .button-icon {
            transform: translateX(5px);
        }

    .luxury-button-secondary:hover {
        box-shadow: 0 15px 30px rgba(108, 117, 125, 0.3);
    }

    .ml-3 {
        margin-left: 15px;
    }

    .mt-5 {
        margin-top: 30px;
    }

    /* Animaciones */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .luxury-icon {
        animation: float 4s ease-in-out infinite;
    }

    @@media (max-width: 768px) {
        .luxury-card {
            padding: 20px;
        }

        .luxury-title {
            font-size: 28px;
        }

        .luxury-subtitle {
            font-size: 16px;
        }

        .luxury-details-row {
            flex-direction: column;
        }

        .luxury-details-label,
        .luxury-details-value {
            width: 100%;
        }

        .luxury-button {
            max-width: 100%;
            margin-bottom: 15px;
        }

        .text-right {
            text-align: left;
        }
    }
</style>