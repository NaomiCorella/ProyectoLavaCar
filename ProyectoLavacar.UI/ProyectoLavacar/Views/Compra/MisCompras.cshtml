@model IEnumerable<ProyectoLavacar.Abstraciones.Modelos.ModuloCompra.CompraAdminDto>

@{
    ViewBag.Title = "MisCompra";
}

<h2>MisCompra</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionServicio)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionServicio)
        </td>
      
        <td>
            <a href="@Url.Action("DetallesCompra", new { idCompra = item.idCompra })" class="btn btn-outline-info btn-sm me-2" title="Detalles">
                <i class="fas fa-info-circle"></i> Detalles
            </a>
            <a href="@Url.Action("DescargarPDFCompra", new { idCompra =item.idCompra })" class="btn btn-outline-info ml-2">
                <i class="fas fa-times me-2"></i> DescargarPDF
            </a>
        </td>
    </tr>
}

</table>
