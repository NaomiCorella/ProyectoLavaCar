                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.costo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescripcionServicio)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>*@
                <td>
                    <a href="@Url.Action("DetallesCompra", new { idCompra = item.idCompra })" class="btn btn-outline-info btn-sm me-2" title="Detalles">
                        <i class="fas fa-info-circle"></i> Detalles
                    </a>

                    <a href="@Url.Action("DescargarPDFCompra", new { idCompra = item.idCompra })" class="btn btn-outline-danger btn-sm" title="Descargar PDF">
