@model IEnumerable<ProyectoLavacar.Abstraciones.Modelos.ModuloCompra.CompraCompletaDto>

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>


@using (Html.BeginForm("Filtro", "Compra", FormMethod.Get))
{
