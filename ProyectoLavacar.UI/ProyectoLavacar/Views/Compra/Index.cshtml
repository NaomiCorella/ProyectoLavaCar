<body>

    <h2>Informe de Compra</h2>


    @using (Html.BeginForm("Filtro", "Compra", FormMethod.Get))
    {
        <div class="form-group">
            <label for="fechaInicio">Fecha Inicio</label>
            <input type="date" name="fechaInicio" id="fechaInicio" class="form-control" value="" />
        </div>

        <div class="form-group">
            <label for="fechaFin">Fecha Fin</label>
            <input type="date" name="fechaFin" id="fechaFin" class="form-control" value="" />
        </div>

        <button type="submit" class="btn btn-primary">Filtrar</button>
    }

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
