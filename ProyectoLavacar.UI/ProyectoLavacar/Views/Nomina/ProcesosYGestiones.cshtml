@model ProyectoLavacar.Abstraciones.Modelos.ModuloNomina.NominaCompletaDto

@{
    ViewBag.Title = "Detalles de Nómina";
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Detalles de Nómina</title>
    <link href="~/Content/assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/default.css" rel="stylesheet" />
    <link href="~/Content/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets/css/slick.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/flaticon/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
</head>

<body>
    <div class="luxury-review-container">
        <div class="container">
            <div class="section-title text-center">
                <div class="luxury-icon">
                    <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z" />
                    </svg>
                </div>
                <h2 class="luxury-title">Procesos y gestiones</h2>
                <p class="luxury-subtitle">Agrega ajustes salariales,tramites y procesa la nomina del empleado</p>
                <div class="luxury-divider"></div>
            </div>

            <div class="luxury-card shadow-lg rounded">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-4 luxury-action-buttons">
                        @Html.ActionLink(
                            "Gestionar Ajustes",
                            "ListarAjustes",
                            new { idNomina = Model.IdNomina },
                            new { @class = "luxury-button luxury-button-primary" }
                        )

                        @Html.ActionLink(
                            "Gestionar Trámites",
                            "ListarTramites",
                            new { idNomina = Model.IdNomina },
                            new { @class = "luxury-button luxury-button-primary" }
                        )

                        @Html.ActionLink(
                            "Procesar Nómina",
                            "ProcesarNomina",
                            new { idNomina = Model.IdNomina },
                            new { @class = "luxury-button luxury-button-primary" }
                        )
                    </div>

                    <div class="luxury-details-table">
                        <div class="luxury-details-header">
                            <svg viewBox="0 0 24 24" width="24" height="24">
                                <path fill="currentColor" d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                            </svg>
                            <span>Información del Empleado</span>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.nombre)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.nombre) @Html.DisplayFor(model => model.primer_apellido) @Html.DisplayFor(model => model.segundo_apellido)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.cedula)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.cedula)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.puesto)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.puesto)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.FechaInicio)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.FechaInicio)</div>
                        </div>
                    </div>

                    <div class="luxury-details-table mt-4">
                        <div class="luxury-details-header">
                            <svg viewBox="0 0 24 24" width="24" height="24">
                                <path fill="currentColor" d="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M12,7C13.4,7 14.8,8.1 14.8,9.5V11C15.4,11 16,11.6 16,12.2V15.7C16,16.4 15.4,17 14.7,17H9.2C8.6,17 8,16.4 8,15.8V12.3C8,11.6 8.6,11 9.2,11V9.5C9.2,8.1 10.6,7 12,7M12,8.2C11.2,8.2 10.5,8.7 10.5,9.5V11H13.5V9.5C13.5,8.7 12.8,8.2 12,8.2Z" />
                            </svg>
                            <span>Información de Pago</span>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.FechaDePago)</div>
                            <div class="luxury-details-value">@Html.DisplayFor(model => model.FechaDePago)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.SalarioNeto)</div>
                            <div class="luxury-details-value luxury-amount">@Html.DisplayFor(model => model.SalarioNeto)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.totalBono)</div>
                            <div class="luxury-details-value luxury-amount positive">@Html.DisplayFor(model => model.totalBono)</div>
                        </div>

                        <div class="luxury-details-row">
                            <div class="luxury-details-label">@Html.DisplayNameFor(model => model.totalDedu)</div>
                            <div class="luxury-details-value luxury-amount negative">@Html.DisplayFor(model => model.totalDedu)</div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index")" class="luxury-button luxury-button-secondary">
                            <span class="button-text">Volver al Listado</span>
                            <span class="button-icon">
                                <svg viewBox="0 0 24 24">
                                    <path fill="currentColor" d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" />
                                </svg>
                            </span>
                            <div class="button-shine"></div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/assets/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/wow.min.js"></script>
</body>
</html>

<style>
    .luxury-button-primary {
        background-color: #003366; /* un azul oscuro elegante */
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .luxury-button-primary:hover {
            background-color: #001f4d; /* más oscuro al pasar el cursor */
        }
    .luxury-review-container {
        padding: 40px 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
    }

    .section-title {
        margin-bottom: 40px;
        position: relative;
    }
    
    .luxury-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        border-radius: 50%;
        color: white;
        box-shadow: 0 10px 30px rgba(69, 196, 176, 0.3);
    }

        .luxury-icon svg {
            width: 40px;
            height: 40px;
        }

    .luxury-title {
        font-size: 32px;
        font-weight: 600;
        color: #012030;
        margin-bottom: 15px;
    }

    .luxury-subtitle {
        color: #6c757d;
        font-size: 18px;
        max-width: 600px;
        margin: 0 auto 20px;
    }

    .luxury-divider {
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #45C4B0 0%, #9AEBA3 100%);
        margin: 20px auto;
        border-radius: 3px;
    }

    .luxury-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        max-width: 1000px;
        margin: 0 auto;
        padding: 30px;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .luxury-details-table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
        margin-bottom: 20px;
    }

    .luxury-details-header {
        background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
        color: white;
        padding: 15px 20px;
        font-size: 18px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .luxury-details-header svg {
            width: 20px;
            height: 20px;
        }

    .luxury-details-row {
        display: flex;
        border-bottom: 1px solid #f0f0f0;
    }

        .luxury-details-row:last-child {
            border-bottom: none;
        }

    .luxury-details-label {
        width: 40%;
        padding: 15px 20px;
        font-weight: 600;
        color: #495057;
        background-color: #f9f9f9;
    }

    .luxury-details-value {
        width: 60%;
        padding: 15px 20px;
        color: #6c757d;
    }

    .luxury-amount {
        font-weight: 600;
    }

    .luxury-amount.positive {
        color: #28a745;
    }

    .luxury-amount.negative {
        color: #dc3545;
    }

    .luxury-action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .luxury-button {
        position: relative;
        width: 100%;
        max-width: 250px;
        padding: 16px;
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        overflow: hidden;
        transition: all 0.4s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
    }

    .luxury-button-primary {
        background: linear-gradient(135deg, #003366 0%, #9AEBA3 100%);
        box-shadow: 0 10px 20px rgba(69, 196, 176, 0.2);
    }

    .luxury-button-warning {
        background: linear-gradient(135deg, #FFC107 0%, #FF9800 100%);
        box-shadow: 0 10px 20px rgba(255, 193, 7, 0.2);
    }

    .luxury-button-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #adb5bd 100%);
        box-shadow: 0 10px 20px rgba(108, 117, 125, 0.2);
    }

    .button-text {
        position: relative;
        z-index: 2;
    }

    .button-icon {
        position: relative;
        z-index: 2;
        display: flex;
        transition: transform 0.3s ease;
    }

        .button-icon svg {
            width: 20px;
            height: 20px;
        }

    .button-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.6s ease;
    }

    .luxury-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        text-decoration: none;
    }

        .luxury-button:hover .button-shine {
            left: 100%;
        }

        .luxury-button:hover .button-icon {
            transform: translateX(5px);
        }

    /* Animaciones */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .luxury-icon {
        animation: float 4s ease-in-out infinite;
    }

    @@media (max-width: 768px) {
        .luxury-card {
            padding: 20px;
        }

        .luxury-title {
            font-size: 28px;
        }

        .luxury-subtitle {
            font-size: 16px;
        }

        .luxury-details-row {
            flex-direction: column;
        }

        .luxury-details-label,
        .luxury-details-value {
            width: 100%;
        }

        .luxury-action-buttons {
            flex-direction: column;
            align-items: center;
        }

        .luxury-button {
            max-width: 100%;
        }
    }
</style>