@model ProyectoLavacar.Abstraciones.Modelos.ModuloNomina.TramitesDto

@{
    ViewBag.Title = "IngresarTramites";
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Administración de Usuarios</title>
    <link href="~/Content/assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/default.css" rel="stylesheet" />
    <link href="~/Content/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets/css/slick.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/flaticon/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
    <style>
        .hidden {
            display: none;
        }
    </style>
</head>

<body>

    <div class="luxury-process-container">
        <div class="container">
            <div class="section-title text-center">
                <div class="luxury-icon">
                    <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M19,3H14.82C14.4,1.84 13.3,1 12,1C10.7,1 9.6,1.84 9.18,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M12,3A1,1 0 0,1 13,4A1,1 0 0,1 12,5A1,1 0 0,1 11,4A1,1 0 0,1 12,3M7,7H17V5H19V19H5V5H7V7Z" />
                    </svg>
                </div>
                <h2 class="luxury-title">Registrar Trámites</h2>
                <p class="luxury-subtitle">Gestión de incapacidades y otros procesos</p>
                <div class="luxury-divider"></div>
            </div>

            <div class="luxury-card shadow-lg rounded">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="luxury-form">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="luxury-form-group">
                                <div class="luxury-form-label">
                                    @Html.LabelFor(model => model.FechaInicio)
                                </div>
                                <div class="luxury-form-input">
                                    @Html.TextBoxFor(model => model.FechaInicio, new { @class = "form-control luxury-input", type = "date", required = "required" })
                                    @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="luxury-form-group">
                                <div class="luxury-form-label">
                                    @Html.LabelFor(model => model.duracion)
                                </div>
                                <div class="luxury-form-input">
                                    @Html.EditorFor(model => model.duracion, new { htmlAttributes = new { @class = "form-control luxury-input", placeholder = "Duración en días" } })
                                    @Html.ValidationMessageFor(model => model.duracion, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="luxury-form-group">
                                <div class="luxury-form-label">
                                    @Html.LabelFor(model => model.tipo)
                                </div>
                                <div class="luxury-form-input">
                                    @Html.DropDownListFor(model => model.tipo,
                                              new SelectList(ViewBag.tipo, "Value", "Text"),
                                              "-- Seleccione un tipo de trámite --",
                                              new { @class = "form-control luxury-select", id = "tipoSelect" })
                                    @Html.ValidationMessageFor(model => model.tipo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="luxury-form-group hidden" id="Aseguradora">
                                <div class="luxury-form-label">
                                    @Html.Label("Aseguradora")
                                </div>
                                <div class="luxury-form-input">
                                    @Html.DropDownListFor(model => model.aseguradora,
                                              new SelectList(ViewBag.Aseguradora, "Value", "Text"),
                                              "-- Seleccione una aseguradora --",
                                              new { @class = "form-control luxury-select", id = "aseguradoraSelect" })
                                    @Html.ValidationMessageFor(model => model.Razon, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="luxury-form-group hidden" id="selectDeduccion">
                                <div class="luxury-form-label">
                                    @Html.Label("Tipo de Incapacidad (CCSS)")
                                </div>
                                <div class="luxury-form-input">
                                    @Html.DropDownListFor(model => model.Razon,
                                              new SelectList(ViewBag.PorCSSS, "Value", "Text"),
                                              "-- Seleccione un tipo de incapacidad --",
                                              new { @class = "form-control luxury-select", id = "RazonDeduccion" })
                                    @Html.ValidationMessageFor(model => model.Razon, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="luxury-form-group hidden" id="selectBonificacion">
                                <div class="luxury-form-label">
                                    @Html.Label("Tipo de Incapacidad (INS)")
                                </div>
                                <div class="luxury-form-input">
                                    @Html.DropDownListFor(model => model.Razon,
                                              new SelectList(ViewBag.PorINS, "Value", "Text"),
                                              "-- Seleccione un tipo de incapacidad --",
                                              new { @class = "form-control luxury-select", id = "RazonBonificacion" })
                                    @Html.ValidationMessageFor(model => model.Razon, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="luxury-form-actions">
                                <button type="submit" class="luxury-button luxury-button-primary">
                                    <span class="button-text">Registrar Trámite</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M17 3H5C3.89 3 3 3.9 3 5V19C3 20.1 3.89 21 5 21H19C20.1 21 21 20.1 21 19V7L17 3M19 19H5V5H16.17L19 7.83V19M12 12C10.34 12 9 13.34 9 15S10.34 18 12 18 15 16.66 15 15 13.66 12 12 12M6 6H15V10H6V6Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </button>

                                @Html.ActionLink(
                                    "Volver al Listado",
                                    "Index",
                                    null,
                                    new { @class = "luxury-button luxury-button-secondary" }
                                )
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script>
            $(document).ready(function () {
                $('#tipoSelect').change(function () {
                    var selectedValue = $(this).val();
                    $('#Aseguradora').hide();
                    $('#selectDeduccion').hide();
                    $('#selectBonificacion').hide();

                    if (selectedValue === 'Incapacidad') {
                        $('#Aseguradora').show();
                    }
                });

                $('#aseguradoraSelect').change(function () {
                    var selectedValue = $(this).val();
                    $('#selectDeduccion').hide();
                    $('#selectBonificacion').hide();

                    if (selectedValue === 'INS') {
                        $('#selectBonificacion').show();
                    } else if (selectedValue === 'CSSS') {
                        $('#selectDeduccion').show();
                    }
                });

                $('form').submit(function () {
                    var selectedValue = $('#aseguradoraSelect').val();
                    $('#RazonDeduccion').prop('disabled', false);
                    $('#RazonBonificacion').prop('disabled', false);

                    if (selectedValue === 'INS') {
                        $('#RazonDeduccion').prop('disabled', true);
                    } else if (selectedValue === 'CSSS') {
                        $('#RazonBonificacion').prop('disabled', true);
                    }
                });
            });
        </script>
    }

    <style>
        .luxury-process-container {
            padding: 40px 0;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }

        .section-title {
            margin-bottom: 40px;
            position: relative;
        }

        .luxury-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
            border-radius: 50%;
            color: white;
            box-shadow: 0 10px 30px rgba(69, 196, 176, 0.3);
        }

            .luxury-icon svg {
                width: 40px;
                height: 40px;
            }

        .luxury-title {
            font-size: 32px;
            font-weight: 600;
            color: #012030;
            margin-bottom: 15px;
        }

        .luxury-subtitle {
            color: #6c757d;
            font-size: 18px;
            max-width: 600px;
            margin: 0 auto 20px;
        }

        .luxury-divider {
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, #45C4B0 0%, #9AEBA3 100%);
            margin: 20px auto;
            border-radius: 3px;
        }

        .luxury-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            max-width: 800px;
            margin: 0 auto;
            padding: 30px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .luxury-form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .luxury-form-group {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            margin-bottom: 15px;
        }

        .luxury-form-label {
            width: 30%;
            padding-right: 15px;
            font-weight: 600;
            color: #495057;
        }

        .luxury-form-input {
            width: 70%;
        }

        .luxury-input, .luxury-select {
            width: 100%;
           /* padding: 12px 15px;*/
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease;
            background-color: #f9f9f9;
        }

            .luxury-input:focus, .luxury-select:focus {
                border-color: #45C4B0;
                box-shadow: 0 0 0 3px rgba(69, 196, 176, 0.2);
                outline: none;
                background-color: white;
            }

        .luxury-form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 30px;
        }

        .luxury-button {
            position: relative;
            min-width: 180px;
            padding: 16px 24px;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            overflow: hidden;
            transition: all 0.4s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-decoration: none;
        }

        .luxury-button-primary {
            background: linear-gradient(135deg, #45C4B0 0%, #9AEBA3 100%);
            box-shadow: 0 10px 20px rgba(69, 196, 176, 0.2);
        }

        .luxury-button-secondary {
            background: linear-gradient(135deg, #6c757d 0%, #adb5bd 100%);
            box-shadow: 0 10px 20px rgba(108, 117, 125, 0.2);
        }

        .button-text {
            position: relative;
            z-index: 2;
        }

        .button-icon {
            position: relative;
            z-index: 2;
            display: flex;
            transition: transform 0.3s ease;
        }

            .button-icon svg {
                width: 20px;
                height: 20px;
            }

        .button-shine {
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s ease;
        }

        .luxury-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            text-decoration: none;
        }

            .luxury-button:hover .button-shine {
                left: 100%;
            }

            .luxury-button:hover .button-icon {
                transform: translateX(5px);
            }

        .hidden {
            display: none;
        }

        /* Animaciones */
        @@keyframes float {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .luxury-icon {
            animation: float 4s ease-in-out infinite;
        }

        @@media (max-width: 768px) {
            .luxury-card {
                padding: 20px;
            }

            .luxury-title {
                font-size: 28px;
            }

            .luxury-subtitle {
                font-size: 16px;
            }

            .luxury-form-group {
                flex-direction: column;
                align-items: flex-start;
            }

            .luxury-form-label,
            .luxury-form-input {
                width: 100%;
            }

            .luxury-form-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .luxury-button {
                width: 100%;
                max-width: 100%;
            }
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/assets/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/wow.min.js"></script>

</body>

</html>

















