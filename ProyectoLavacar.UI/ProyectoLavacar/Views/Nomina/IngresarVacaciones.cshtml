@model ProyectoLavacar.Abstraciones.Modelos.ModuloNomina.TramitesDto

@{
    ViewBag.Title = "IngresarVacaciones";
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Administración de Vacaciones</title>
    <link href="~/Content/assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/default.css" rel="stylesheet" />
    <link href="~/Content/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/assets/css/slick.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/flaticon/flaticon.css" rel="stylesheet" />
    <link href="~/Content/assets/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
    <style>
        .hidden {
            display: none;
        }
    </style>
</head>

<body>
    <div class="luxury-vacations-container">
        <div class="container">
            <div class="section-title text-center">
                <div class="luxury-icon">
                    <svg viewBox="0 0 24 24">
                        <path fill="currentColor" d="M19 19H5V5H9V3H5C3.89 3 3 3.9 3 5V19C3 20.11 3.9 21 5 21H19C20.11 21 21 20.11 21 19V15H19V19M15 3V5H17.59L7.76 14.83L9.17 16.24L19 6.41V9H21V3H15Z" />
                    </svg>
                </div>
                <h2 class="luxury-title">Solicitud de Vacaciones</h2>
                <p class="luxury-subtitle">Complete los datos para solicitar sus días de descanso</p>
                <div class="luxury-divider"></div>
            </div>

            <div class="luxury-card shadow-lg rounded">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="luxury-form">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="luxury-form-group">
                                <div class="luxury-form-label">
                                    @Html.LabelFor(model => model.FechaInicio)
                                </div>
                                <div class="luxury-form-input">
                                    @Html.TextBoxFor(model => model.FechaInicio,
                                    new
                                         {
                                             @class = "form-control luxury-input",
                                          type = "date",
                                          required = "required"
                                         })
                                    @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="luxury-form-group">
                                <div class="luxury-form-label">
                                    @Html.LabelFor(model => model.duracion)
                                </div>
                                <div class="luxury-form-input">
                                    @Html.EditorFor(model => model.duracion,
                                    new
                                         {
                                             htmlAttributes = new
                                             {
                                        @class = "form-control luxury-input",
                                        placeholder = "Días de vacaciones",
                                        min = "1"
                                             }
                                         })
                                    @Html.ValidationMessageFor(model => model.duracion, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="luxury-form-group">
                                <div class="luxury-form-label">
                                    @Html.Label("Razon", "Justificación")
                                </div>
                                <div class="luxury-form-input">
                                    @Html.TextAreaFor(model => model.Razon,
                                    new
                                         {
                                             @class = "form-control luxury-input",
                                          rows = "3",
                                          placeholder = "Explique el motivo de su solicitud"
                                         })
                                    @Html.ValidationMessageFor(model => model.Razon, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="luxury-form-actions">
                                <button type="submit" class="luxury-button luxury-button-primary">
                                    <span class="button-text">Solicitar Vacaciones</span>
                                    <span class="button-icon">
                                        <svg viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M13 19C13 19.34 13.04 19.67 13.09 20H4C2.9 20 2 19.11 2 18V6C2 4.89 2.89 4 4 4H10L12 6H20C21.1 6 22 6.89 22 8V13.81C21.12 13.3 20.1 13 19 13C15.69 13 13 15.69 13 19M23.5 17L18.5 22L15 18.5L16.5 17L18.5 19L22 15.5L23.5 17Z" />
                                        </svg>
                                    </span>
                                    <div class="button-shine"></div>
                                </button>

                                @Html.ActionLink(
                                    "Volver al Listado",
                                    "Index",
                                    null,
                                    new { @class = "luxury-button luxury-button-secondary" }
                                )
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script>
            $(document).ready(function () {
                // Validación adicional para fechas
                $('form').submit(function () {
                    var fechaInicio = new Date($('#FechaInicio').val());
                    var hoy = new Date();
                    hoy.setHours(0, 0, 0, 0);

                    if (fechaInicio < hoy) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Fecha inválida',
                            text: 'La fecha de inicio no puede ser anterior al día actual'
                        });
                        return false;
                    }

                    if ($('#duracion').val() < 1) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Duración inválida',
                            text: 'Debe solicitar al menos 1 día de vacaciones'
                        });
                        return false;
                    }
                });
            });
        </script>
    }

    <style>
        form input,
        form select,
        form textarea {
            max-width: none;
            width: 100%;
        }


        .luxury-vacations-container {
            padding: 40px 0;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }

        .section-title {
            margin-bottom: 40px;
            position: relative;
        }

        .luxury-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #13678A 0%, #45C4B0 100%);
            border-radius: 50%;
            color: white;
            box-shadow: 0 10px 30px rgba(19, 103, 138, 0.3);
        }

            .luxury-icon svg {
                width: 40px;
                height: 40px;
            }

        .luxury-title {
            font-size: 32px;
            font-weight: 600;
            color: #012030;
            margin-bottom: 15px;
        }

        .luxury-subtitle {
            color: #6c757d;
            font-size: 18px;
            max-width: 600px;
            margin: 0 auto 20px;
        }

        .luxury-divider {
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, #13678A 0%, #45C4B0 100%);
            margin: 20px auto;
            border-radius: 3px;
        }

        .luxury-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            max-width: 800px;
            margin: 0 auto;
            padding: 30px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .luxury-form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .luxury-form-group {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            margin-bottom: 15px;
        }

        .luxury-form-label {
            width: 30%;
            padding-right: 15px;
            font-weight: 600;
            color: #495057;
        }

        .luxury-form-input {
            width: 70%;
        }

        .luxury-input, .luxury-select, .luxury-textarea {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease;
            background-color: #f9f9f9;
        }

            .luxury-input:focus, .luxury-select:focus, .luxury-textarea:focus {
                border-color: #13678A;
                box-shadow: 0 0 0 3px rgba(19, 103, 138, 0.2);
                outline: none;
                background-color: white;
            }

        .luxury-textarea {
            min-height: 100px;
            resize: vertical;
        }

        .luxury-form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 30px;
        }

        .luxury-button {
            position: relative;
            min-width: 180px;
            padding: 16px 24px;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            overflow: hidden;
            transition: all 0.4s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-decoration: none;
        }

        .luxury-button-primary {
            background: linear-gradient(135deg, #13678A 0%, #45C4B0 100%);
            box-shadow: 0 10px 20px rgba(19, 103, 138, 0.2);
        }

        .luxury-button-secondary {
            background: linear-gradient(135deg, #6c757d 0%, #adb5bd 100%);
            box-shadow: 0 10px 20px rgba(108, 117, 125, 0.2);
        }

        .button-text {
            position: relative;
            z-index: 2;
        }

        .button-icon {
            position: relative;
            z-index: 2;
            display: flex;
            transition: transform 0.3s ease;
        }

            .button-icon svg {
                width: 20px;
                height: 20px;
            }

        .button-shine {
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s ease;
        }

        .luxury-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            text-decoration: none;
        }

            .luxury-button:hover .button-shine {
                left: 100%;
            }

            .luxury-button:hover .button-icon {
                transform: translateX(5px);
            }

        /* Animaciones */
        @@keyframes float {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .luxury-icon {
            animation: float 4s ease-in-out infinite;
        }

        @@media (max-width: 768px) {
            .luxury-card {
                padding: 20px;
            }

            .luxury-title {
                font-size: 28px;
            }

            .luxury-subtitle {
                font-size: 16px;
            }

            .luxury-form-group {
                flex-direction: column;
                align-items: flex-start;
            }

            .luxury-form-label,
            .luxury-form-input {
                width: 100%;
            }

            .luxury-form-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .luxury-button {
                width: 100%;
                max-width: 100%;
            }
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/assets/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/wow.min.js"></script>
</body>

</html>